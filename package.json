{
  "name": "tab-organizer",
  "displayName": "Tab Organizer",
  "description": "Chrome extension that sorts and organizes your browser tabs.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/thilllon/tab-organizer.git"
  },
  "keywords": [
    "chrome-extension",
    "tab-organizer",
    "tab-sort"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "format": "biome check --write . && mise exec -- ruff format .",
    "zip": "pnpm build && tsx scripts/zip.ts",
    "screenshot": "tsx scripts/screenshot.ts",
    "prepare-registration": "tsx scripts/prepare-registration.ts",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@crxjs/vite-plugin": "^2.3.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/archiver": "^7.0.0",
    "@types/chrome": "^0.1.36",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "archiver": "^7.0.1",
    "lefthook": "^2.1.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
